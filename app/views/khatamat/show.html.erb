<h1><%= @khatma.description %></h1>
<p>Owner: <%= @khatma.user.name %></p>

<% @khatma.chapters.each do |chapter| %>
  <hr/>
  <p>
    <b>الجزء <%= chapter.name %></b>
    <% chapter.users.each do |u| %>
        <%= link_to image_tag("#{u.image}", width: "44", height: "4 4", alt: "#{u.name}"), "/u/#{u.uid}" %>
    <% end %>
    <%= form_tag "#{@khatma.id}/add_user", method: "get" do %>
        <%= hidden_field_tag :ch_id, chapter.name %>
        <%= submit_tag t('i_will_read_this'), class: "button tiny round success font-droid-kufi", data: { confirm: "Are you sure?" } %>
    <% end %>
  </p>
<% end %>

<hr/>
<h3>Danger Zone</h3>
<%= form_tag do %>
  <%= hidden_field_tag "_method", "delete" %>
  <%= submit_tag "Delete khatma", class: "tiny alert button", data: { confirm: "Are you sure?" } %>
<% end %>